<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-12'>
      <h1><%= @title %></h1>
      <% @conversation.messages.each do |message| %>
        <p class="w-75 <%= message.user == current_user ? 'ml-auto text-light bg-primary' : 'bg-light' %> p-2 rounded mb-2">
          <%= message.content %>
        </p>
      <% end %>
      <%= form_with model: [@conversation, @message], local: true do |form| %>
        <%= form.label :content, "メッセージ送信" %>
        <%= form.text_area :content, class: 'form-control' %>
        <%= form.submit '送信', class: 'btn btn-primary mt-2 ms-auto d-block' %>
      <% end %>
    </div>
  </div>
</div>
